# Zeitzone
TZ=Europe/Amsterdam

# Welche Apartments sind aktiv?
APTS=1,2

# Apartment 1
APT_1_NAME=Apartment 1
APT_1_AUTH_NAME=Gäste
APT_1_DRIVE_FILE_ID=your-google-drive-file-id-here
APT_1_SMARTLOCK_ID=12345678901
APT_1_PIN=123456

# Apartment 2
APT_2_NAME=Apartment 2
APT_2_AUTH_NAME=Gäste
APT_2_DRIVE_FILE_ID=your-google-drive-file-id-here
APT_2_SMARTLOCK_ID=98765432109
APT_2_PIN=654321

# Nuki Access Token (global)
NUKI_ACCESS_TOKEN=your-nuki-access-token-here

# Zeiten
CHECKIN_TIME=14:30
CHECKOUT_TIME=10:30
RUN_TIME=10:30

# Spaltennamen in der Buchungstabelle
COL_ARRIVAL=Aankomstdatum
COL_DEPARTURE=Vertrekdatum

# Täglicher Report per Mail (immer)
SMTP_HOST=mail.example.com
SMTP_PORT=465
SMTP_USER=info@example.com
SMTP_PASSWORD=your-mail-password
SMTP_STARTTLS=false   # wird bei Port 465 ohnehin ignoriert
MAIL_FROM=info@example.com
MAIL_TO=your@email.com
MAIL_SUBJECT_PREFIX=Nuki Scheduler Report

# Optional: Nach Änderungen sofort Synchronisierung mit Nuki Web erzwingen
# Achtung: Häufige Syncs können die Batterie belasten.
FORCE_SYNC_AFTER_CHANGE=true

# Log-Retention (Tage)
LOG_RETENTION_DAYS=30
