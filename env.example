# Zeitzone
TZ=Europe/Amsterdam

# Welche Apartments sind aktiv?
APTS=82,83

# Apartment 82
APT_82_NAME=Appartement 82
APT_82_AUTH_NAME=Gäste
APT_82_DRIVE_FILE_ID=GOOGLE_DRIVE_FILE_ID_APP82            # z.B. 1AbCdEf...
APT_82_SMARTLOCK_ID=NUKI_SMARTLOCK_ID_APP82                 # z.B. 18110000000
APT_82_PIN=PIN_APP82                                        # z.B. 123456

# Apartment 83
APT_83_NAME=Appartement 83
APT_83_AUTH_NAME=Gäste
APT_83_DRIVE_FILE_ID=GOOGLE_DRIVE_FILE_ID_APP83
APT_83_SMARTLOCK_ID=NUKI_SMARTLOCK_ID_APP83
APT_83_PIN=PIN_APP83

# Nuki Access Token (global)
NUKI_ACCESS_TOKEN=NUKI_PERSONAL_ACCESS_TOKEN

# Zeiten
CHECKIN_TIME=14:30
CHECKOUT_TIME=10:15
RUN_TIME=10:30

# Spaltennamen in der Buchungstabelle
COL_ARRIVAL=Aankomstdatum
COL_DEPARTURE=Vertrekdatum

# Täglicher Report per Mail (immer)
SMTP_HOST=smtp.example.com
SMTP_PORT=465
SMTP_USER=info@example.com
SMTP_PASSWORD=SMTP_PASSWORD                                 # ggf. in Quotes setzen, wenn Sonderzeichen
SMTP_STARTTLS=false   # wird bei Port 465 ohnehin ignoriert
MAIL_FROM=info@example.com
MAIL_TO=you@example.com
MAIL_SUBJECT_PREFIX=Nuki Scheduler Report

# Optional: Nach Änderungen sofort Synchronisierung mit Nuki Web erzwingen
# Achtung: Häufige Syncs können die Batterie belasten.
PRECHECK_FORCE_SYNC=true
PRECHECK_SYNC_WAIT_SEC=5
PRECHECK_VERIFY_ATTEMPTS=12
FORCE_SYNC_AFTER_CHANGE=true

# Log-Retention (Tage)
LOG_RETENTION_DAYS=30
