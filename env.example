# Zeitzone
TZ=Europe/Amsterdam

# Welche Apartments sind aktiv? IDs frei wählbar (z. B. A1,B2,27)
APTS=A1,B2

# Apartment A1
APT_A1_NAME=Apartment A1
APT_A1_DRIVE_FILE_ID=YOUR_GOOGLE_DRIVE_FILE_ID_A1
APT_A1_SMARTLOCK_ID=1234567890
APT_A1_PIN=111111

# Apartment B2
APT_B2_NAME=Apartment B2
APT_B2_DRIVE_FILE_ID=YOUR_GOOGLE_DRIVE_FILE_ID_B2
APT_B2_SMARTLOCK_ID=2345678901
APT_B2_PIN=222222

# Nuki Access Token (global)
NUKI_ACCESS_TOKEN=YOUR_NUKI_ACCESS_TOKEN

# Zeiten (minutengenau, 24h-Format)
CHECKIN_TIME=15:00
CHECKOUT_TIME=11:00

# Spaltennamen in der Google-Drive-Tabelle
COL_ARRIVAL=Aankomstdatum
COL_DEPARTURE=Vertrekdatum

# Log-Retention (Tage)
LOG_RETENTION_DAYS=30

# Täglicher Report per Mail
SMTP_HOST=your.smtp.host
SMTP_PORT=465
SMTP_USER=your-smtp-user@example.com
SMTP_PASSWORD=your-smtp-password
SMTP_STARTTLS=false   # bei Port 465 ignoriert; bei 587 auf true setzen
MAIL_FROM=your-smtp-user@example.com
MAIL_TO=you@example.com, teammate@example.com
MAIL_SUBJECT_PREFIX=Nuki Scheduler Report